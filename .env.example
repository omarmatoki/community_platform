# ========================================
# ملف نموذجي للإعدادات - انسخه إلى .env
# Example Environment Variables - Copy to .env
# ========================================

# إعدادات السيرفر / Server Configuration
PORT=4000
NODE_ENV=development

# إعدادات قاعدة البيانات / Database Configuration (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=community_platform
DB_DIALECT=mysql

# إعدادات JWT / JWT Configuration
JWT_SECRET=your_super_secret_key_here_change_this_in_production
JWT_EXPIRE=7d

# إعدادات WhatsApp / WhatsApp Settings
# المدة الزمنية بين الرسائل (بالميلي ثانية)
WHATSAPP_MESSAGE_DELAY=30000

# رابط الفرونت إند / Frontend URL
FRONTEND_URL=http://localhost:3000
